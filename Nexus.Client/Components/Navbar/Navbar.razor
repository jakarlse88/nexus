@inherits NavbarBase
@inject IJSRuntime JSRuntime


<nav class="container mx-auto px-6 py-2 flex justify-between items-center fixed bg-white">
    <a href="/" class="font-bold text-2xl lg:text-4xl">
        <h2>@NavbarHeading</h2>
    </a>

    <div class="block lg:hidden">

        <button class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:border-teal-500 appearance-none focus:outline-none">
            <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <title>Menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
            </svg>
        </button>
    </div>

    <div class="hidden lg:block">

        <ul class="inline-flex">

            <li class="px-4 hover:text-gray-800 navbar-link">
                <a
                    @onclick="@ScrollToAboutSection">
                    About
                </a>
            </li>

            <li class="px-4 hover:text-gray-800 navbar-link">
                <a
                    @onclick="@ScrollToSkillSection">
                    Skills
                </a>
            </li>

            <li class="px-4 hover:text-gray-800 navbar-link">
                <a
                    @onclick="@ScrollToWorkSection">
                    Work
                </a>
            </li>

            <li class="px-4 hover:text-gray-800 navbar-link">
                <a
                    @onclick="@ScrollToContactSection">
                    Contact
                </a>
            </li>
    
        </ul>

    </div>

</nav>

@code {
    public async Task ScrollToAboutSection() => await ScrollToSection("#AboutSection");

    public async Task ScrollToSkillSection() => await ScrollToSection("#SkillSection");

    public async Task ScrollToWorkSection() => await ScrollToSection("#WorkSection");

    public async Task ScrollToContactSection() => await ScrollToSection("#ContactSection");

