@inherits NavbarBase

<nav class="mx-auto px-6 py-2 flex justify-between items-center w-screen fixed bg-white">
    
    <a href="/" class="font-handwriting text-black font-bold text-2xl lg:text-4xl">
        <h2>@NavbarHeading</h2>
    </a>

    <div class="block lg:hidden">

        <button class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:border-teal-500 appearance-none focus:outline-none">
            <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <title>Menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
            </svg>
        </button>

    </div>

    <div class="hidden lg:block">

        <ul class="inline-flex">

            <NavbarLinkElement 
                LinkText="About"
                SectionLinkId="#AboutSection"
                OnClick="@ScrollToSection"
            />

            <NavbarLinkElement
                LinkText="Skills"
                SectionLinkId="#SkillSection"
                OnClick="@ScrollToSection"
             />

            <NavbarLinkElement 
                LinkText="Work"
                SectionLinkId="#WorkSection"
                OnClick="@ScrollToSection"
            />

            <NavbarLinkElement 
                LinkText="Contact"
                SectionLinkId="#ContactSection"
                OnClick="@ScrollToSection"
            />
    
        </ul>

    </div>

</nav>